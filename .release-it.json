{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "types": [
        {
          "type": "feat",
          "section": "‚ú® Features"
        },
        {
          "type": "fix",
          "section": "üêõ Bug Fixes"
        },
        {
          "type": "perf",
          "section": "‚ö°Ô∏è Performance Improvements"
        },
        {
          "type": "docs",
          "section": "üìö Documentation"
        }
      ]
    }
  },
  "hooks": {
    "after:bump": "npm run build",
    "before:npm:release": "npm run test"
  }
}
